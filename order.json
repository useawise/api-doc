            "CreateOrderCommand": {
                "properties": {
                    "customerId": {
                        "description": "ID of order customer. See Person API.",
                        "type": "string"
                    },
                    "nationalIdNum": {
                        "description": "Alternative to customerId. Uses a unique national identifier (i.e. CPF in\nBrazil) to inform the customer. If no customer with this identifier is\nfound, then a customer is created, otherwise the order uses the\ncustomer already created in Awise. This property will be ignored if a\ncustomerId is present.",
                        "type": "string"
