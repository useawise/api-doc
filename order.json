                        "nullable": true
                    },
                    "otherExpensesValue": {
                        "type": "string",
                        "format": "decimal",
                        "nullable": true
                    },
                    "discountValue": {
                        "description": "Total order discount. Sum of all individual item discount added to general order discount, if any. All\nindividual items discounts are replaced by discountValue proportionaly divided by items value.",
                        "type": "string",
                        "format": "decimal",
                        "nullable": true,
                        "deprecated": true
                    },
                    "discount": {
                        "description": "Order discount value. This value is proportionaly divided by items value and then added to individual items\ndiscount value.",
                        "type": "string",
                        "format": "decimal",
                        "nullable": true
