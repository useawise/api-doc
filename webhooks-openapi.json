{
  "openapi": "3.0.0",
  "info": {
    "title": "AWISE Webhooks API ",
    "version": "1.0.0",
    "description": "AWISE Webhooks API",
    "termsOfService": "https://www.quantosobra.com.br/termos-de-uso/",
    "contact": {
      "name": "Desenvolvimento QuantoSobra",
      "email": "devs@quantosobra.com.br"
    },
    "license": {
      "name": ""
    }
  },
  "paths": {
    "/webhooks": {
      "get": {
        "operationId": "ListWebhooks",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/WebhookConfig"
                      }
                    }
                  },
                  "type": "object"
                }
              }
            }
          }
        },
        "description": "Example webhook events\n\n{\"event\":\"PRODUCT_REMOVED\",\"data\":{\"companyId\":\"1bgobe\",\"id\":\"zxaGAk\",\"metaProductId\":\"1bdVJV\",\"name\":\"Soccer ball\"},\"timestamp\":\"2023-06-30T18:51:49Z\"}\n\n{\"event\":\"META_PRODUCT_REMOVED\",\"data\":{\"companyId\":\"1bgobe\",\"id\":\"1bdVJV\"},\"timestamp\":\"2023-06-30T18:51:49Z\"}\n\n{\"event\":\"META_PRODUCT_CREATED\",\"data\":{\"brand\":\"Nike\",\"companyId\":\"1bgobe\",\"id\":\"lbV6bB\",\"name\":\"Soccer ball\",\"unit\":\"UN\",\"variants\":[]},\"timestamp\":\"2023-06-30T18:53:01Z\"}\n\n{\"event\":\"PRODUCT_CREATED\",\"data\":{\"barCode\":\"2540600000263\",\"code\":\"Tvs40680001\",\"id\":\"XxG1Al\",\"imagesUrl\":[],\"metaProductId\":\"lbV6bB\",\"name\":\"Soccer ball\",\"purpose\":\"sa\",\"unit\":\"UN\",\"variations\":[],\"companyId\":\"1bgobe\"},\"timestamp\":\"2023-06-30T18:53:01Z\"}\n\n{\"event\":\"PRODUCT_CHANGED\",\"data\":{\"barCode\":\"2540600000263\",\"code\":\"Tvs40680001\",\"grossWeight\":\"0.0000\",\"id\":\"XxG1Al\",\"metaProductId\":\"lbV6bB\",\"name\":\"Soccer ball\",\"netWeight\":\"0.0000\",\"purpose\":\"sa\",\"unit\":\"UN\",\"companyId\":\"1bgobe\"},\"timestamp\":\"2023-06-30T18:53:28Z\"}\n\n{\"event\":\"META_PRODUCT_CHANGED\",\"data\":{\"brand\":\"Nike\",\"code\":\"Tvs4068\",\"id\":\"lbV6bB\",\"name\":\"Soccer ball\",\"unit\":\"UN\",\"variants\":[],\"companyId\":\"1bgobe\"},\"timestamp\":\"2023-06-30T18:53:28Z\"}\n\n{\"event\":\"PRODUCT_STOCK_CHANGED\",\"data\":{\"product\":\"XxG1Al\",\"stockLocation\":\"oxyMxv\",\"availableStock\":\"100.0000\",\"companyId\":\"1bgobe\",\"branchId\":\"1bgobe\"},\"timestamp\":\"2023-06-30T18:54:07Z\"}\n\n{\"event\":\"PRICE_CHANGED\",\"data\":{\"id\":\"XxG1Al\",\"metaProductId\":\"lbV6bB\",\"name\":\"Soccer ball\",\"price\":\"150.00\",\"companyId\":\"1bgobe\",\"branchId\":\"1bgobe\"},\"timestamp\":\"2023-06-30T18:54:07Z\"}\n\n{\"event\":\"SHIPMENT_STATUS_CHANGED\",\"data\":{\"companyId\":\"1bgobe\",\"branchId\":\"1bgobe\",\"id\":\"VAmjbd\",\"order\":\"wxp9J1\",\"previousStatus\":\"in_transport\",\"currentStatus\":\"delivered\",\"deliveryMethod\":\"pickup\"},\"timestamp\":\"2023-06-30T18:55:06Z\"}\n\n{\"event\":\"ORDER_REMOVED\",\"data\":{\"companyId\":\"1bgobe\",\"branchId\":\"1bgobe\",\"id\":\"Ob91b2\"},\"timestamp\":\"2023-06-30T18:55:24Z\"}"
      },
      "post": {
        "operationId": "CreateWebhook",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateWebhookCommand"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success"
          },
          "400": {
            "description": "Validation error"
          }
        },
        "callbacks": {
          "webhook": {
            "{$request.body#/url}": {
              "post": {
                "requestBody": {
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/WebhookPayload"
                      }
                    }
                  }
                },
                "responses": {
                  "2XX": {
                    "description": "Webhook was processed successfully"
                  },
                  "default": {
                    "description": "Webhook will be scheduled to be sent again after 3 hours"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/webhooks/{id}": {
      "get": {
        "operationId": "FindWebhook",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/WebhookConfig"
                    }
                  },
                  "type": "object"
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "delete": {
        "operationId": "DeleteWebhook",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Success"
          }
        }
      },
      "patch": {
        "operationId": "UpdateWebhook",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateWebhookCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Validation error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateWebhookCommand": {
        "required": [
          "url",
          "events"
        ],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "maxLength": 500,
            "nullable": true
          },
          "events": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WebhookEvent"
            }
          }
        },
        "type": "object"
      },
      "UpdateWebhookCommand": {
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "maxLength": 500,
            "nullable": true
          },
          "events": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WebhookEvent"
            }
          }
        },
        "type": "object"
      },
      "WebhookData_ProductStockChanged": {
        "properties": {
          "product": {
            "type": "string"
          },
          "stockLocation": {
            "type": "string"
          },
          "availableStock": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "WebhookEvent": {
        "type": "string",
        "enum": [
          "PRODUCT_STOCK_CHANGED",
          "PRODUCT_CREATED",
          "PRODUCT_CHANGED",
          "PRODUCT_REMOVED",
          "META_PRODUCT_CREATED",
          "META_PRODUCT_CHANGED",
          "META_PRODUCT_REMOVED",
          "PRICE_CHANGED"
        ]
      },
      "WebhookConfig": {
        "properties": {
          "id": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "events": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WebhookEvent"
            }
          }
        },
        "type": "object"
      },
      "WebhookPayload": {
        "properties": {
          "event": {
            "$ref": "#/components/schemas/WebhookEvent"
          },
          "data": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/WebhookData_ProductStockChanged"
              }
            ]
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "type": "object"
      }
    }
  },
  "servers": [
    {
      "url": "https://api.useawise.com"
    }
  ]
}